{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "jsx": "react",
    "paths": {
      "@/*": ["./*"]
    },
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["**/*.test.ts", "**/*.test.tsx"]
} 